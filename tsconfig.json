{
  "compilerOptions": {
    "target": "es2016",
    "sourceMap": true,
    "lib": ["ES2020","DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*":["./src/hooks/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"],
      "@typings/*": ["./src/typings/*"],
      "@styles/*": ["./src/styles/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES5",
      "esModuleInterop": true
    }
  }
}
